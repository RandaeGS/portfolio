---
import { experience } from "../lib/data.js"
import { Dot } from "@lucide/astro"
---

<div class="space-y-2 p-3 md:p-0">
	<h2 class="text-2xl font-semibold">Experience</h2>

	<div class="space-y-4 ">
		{experience.map((exp) => (
		<div class="card border border-gray-400 bg-base-100">
			<div class="card-body">
				<h2 class="card-title">{exp.title}</h2>
				<p class="text-gray-300 font-semibold text-sm">{exp.company}</p>
				<p class="text-gray-300 font-light">{exp.from} - {exp.to}, {exp.location}</p>
				<ul>
					{exp.achievements.map((item) => (
					<li class="flex"><Dot />{item}</li>
					))}
				</ul>
			</div>
		</div>
		))}
	</div>
</div>
